{
  "name": "itunes-lastfm-relay",
  "version": "0.0.1",
  "main": "build/server.js",
  "license": "SEE LICENSE IN <filename>",
  "scripts": {
    "setup": "setup/import.sh",
    "build": "npm run build:relay && npm run build:client && npm run build:server",
    "build:production": "npm run lint && npm run build:client:production && npm run build:server:production",
    "build:client": "NODE_ENV=development webpack --progress --config scripts/webpack/client.js -d",
    "build:server": "NODE_ENV=development ./node_modules/.bin/babel -d build/server src/server",
    "build:relay": "relay-compiler --src ./src --schema ./data/schema.graphql",
    "build:client:production": "npm run build:relay && NODE_ENV=production webpack --config scripts/webpack/client.js -d",
    "build:server:production": "NODE_ENV=production webpack --progress --config scripts/webpack/server.js -d",
    "dev:client": "NODE_ENV=development webpack-dev-server --noinfo --config scripts/webpack/client.js --hot",
    "dev:server": "NODE_ENV=development BABEL_DISABLE_CACHE=1 nodemon --watch src/server --watch config src/server/index.js --exec babel-node",
    "dev:relay": "relay-compiler --watch --src ./src --schema ./data/schema.graphql",
    "lint": "eslint src",
    "server": "NODE_ENV=development node build/server",
    "server:production": "NODE_ENV=production node build/server",
    "start": "npm run server:production",
    "dev": "npm run dev:server & npm run dev:relay & npm run dev:client",
    "production": "npm run build:production && npm start",
    "generate:ssl": "nginx/generate-ssl.sh",
    "test:flow": "flow check --show-all-errors src",
    "coverage:flow": "flow-coverage-report"
  },
  "author": "kostrov@gmail.com",
  "flow-coverage-report": {
    "includeGlob": [
      "src/**/*.js"
    ]
  },
  "pre-commit": {
    "run": [
      "lint",
      "test:flow"
    ],
    "colors": false,
    "silent": false
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-relay": "^1.6.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-async-await": "^0.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-react": "^7.9.1",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.74.0",
    "flow-coverage-report": "^0.5.0",
    "flow-runtime": "^0.17.0",
    "flow-runtime-validators": "^0.17.0",
    "json-loader": "^0.5.7",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "nodemon": "^1.17.5",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.11.1",
    "relay-compiler": "^1.6.0",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-dev-server": "^3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap-css-only": "^4.1.0",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "diacritics": "^1.3.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "font-awesome": "^4.7.0",
    "graphql": "^0.13.2",
    "graphql-relay": "^0.5.5",
    "isomorphic-fetch": "^2.2.1",
    "lodash.throttle": "^4.1.1",
    "mongoose": "^5.1.5",
    "process-env": "^1.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-list": "^0.8.9",
    "react-relay": "^1.6.0",
    "react-relay-network-modern": "^2.3.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^6.1.0",
    "relay-query-lookup-renderer": "^3.0.2",
    "relay-runtime": "^1.6.0",
    "uuid": "^3.2.1"
  }
}
